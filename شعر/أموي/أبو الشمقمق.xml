    <poem id="1">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>برزت من المنازل والقباب</title>
      <qafya>ي</qafya>
      <type>قصيدة</type>
      <lines number="8">
        <line id="1">
          <shatr id="1">بَرَزْتُ منَ المنازِلِ والقِبَابِ</shatr>
          <shatr id="2">فلم يَعْسُرْ على أَحَدٍ حِجَابِي</shatr>
        </line>
        <line id="2">
          <shatr id="1">فمنزليَ الفضاءُ وسقفُ بيتي</shatr>
          <shatr id="2">سماءُ اللهِ أوْ قطعُ السحابِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">فأنتَ إذا أردتَ دخلتَ بيتي</shatr>
          <shatr id="2">عليَّ مُسَلِّماً من غَيْرِ بابِ</shatr>
        </line>
        <line id="4">
          <shatr id="1">لأني لم أجدْ مصراعَ بابٍ</shatr>
          <shatr id="2">يكونُ مِنَ السَّحَابِ إلى التُّرَابِ</shatr>
        </line>
        <line id="5">
          <shatr id="1">ولا أنشقَّ الثرى عن عودِ تختٍ</shatr>
          <shatr id="2">أؤمل أنْ أشدَّ بهِ ثيابي</shatr>
        </line>
        <line id="6">
          <shatr id="1">ولا خِفْتُ الإبَاقَ على عَبِيدي</shatr>
          <shatr id="2">ولا خِفْتُ الهلاكَ على دَوَابي</shatr>
        </line>
        <line id="7">
          <shatr id="1">ولاحاسبتُ يوماً قهرماناً</shatr>
          <shatr id="2">مُحاسبة ً فأغْلَظُ في حِسَابِي</shatr>
        </line>
        <line id="8">
          <shatr id="1">وفي ذا راحة ٌ وَفَراغُ بالٍ</shatr>
          <shatr id="2">فدابُ الدهرِ ذا أبداً ودابي</shatr>
        </line>
      </lines>
    </poem>
    <poem id="2">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>وإبطك قابض الأرواح يرمي</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="4">
        <line id="1">
          <shatr id="1">وإبطكَ قابضُ الأرواحِ يرمي</shatr>
          <shatr id="2">بسمِ الموتِ من تحتِ الثيابِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">شرابكَ في السرابِ إذا عطشنا</shatr>
          <shatr id="2">وَخُبْزُكَ عند مُنْقَطَعِ التُّرابِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">رأيتُ الخبزَ عزَّ لديكَ حتى</shatr>
          <shatr id="2">حسبتُ الخبزَ في جوِّ السحابِ</shatr>
        </line>
        <line id="4">
          <shatr id="1">وما رَوَّحْتَنَا لِتَذُبَّ عَنَّا</shatr>
          <shatr id="2">ولكنْ خفتَ مرزئة َ الذبابِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="3">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>ذهب الموال فلاموا</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="3">
        <line id="1">
          <shatr id="1">ذهبَ الموالِ فلاموا</shatr>
          <shatr id="2">لِ وقد فجعنا بالعربْ</shatr>
        </line>
        <line id="2">
          <shatr id="1">إلا بقايا أصبحوا</shatr>
          <shatr id="2">بالمِصْرِ من قِشْرِ القَصَبْ</shatr>
        </line>
        <line id="3">
          <shatr id="1">بالقولِ بَذُّوا حاتماً</shatr>
          <shatr id="2">والعقلُ ريحٌ في القِرَبْ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="4">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>ومحتجب والناس لا يقربونه</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">ومحتجبٍ والناسُ لا يقربونه</shatr>
          <shatr id="2">وقد ماتَ هزلاً منْ ورا البابِ حاجبهْ</shatr>
        </line>
        <line id="2">
          <shatr id="1">إذا قيلَ: منْ ذا مقبلاً؟ قيل: لا حدٌ</shatr>
          <shatr id="2">و إن قيلَ: منْ ذا خلفهُ؟ قيلَ؛ كاتبهْ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="5">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>يا طول يومي وطول ليلته</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">يا طولَ يومي وطولَ لَيْلَتِهِ</shatr>
          <shatr id="2">فَلْيَهْنَ بُرْغوثُهُ بِجَذْلَتِهِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">قد عَقَدتْ بَنْدَها عَلى جَسَدِي</shatr>
          <shatr id="2">واجتهدتْ في اقتسامِ جملتهِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="6">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>لو ركبت البحار</title>
      <qafya>ا</qafya>
      <type>قطعة</type>
      <lines number="4">
        <line id="1">
          <shatr id="1">لو ركبت البحار صارت فجاجا</shatr>
          <shatr id="2">لا ترى في متونها أمواجا</shatr>
        </line>
        <line id="2">
          <shatr id="1">ولو أني وضعتُ ياقوتة ً</shatr>
          <shatr id="2">حمراءَ في راحتي لصارتْ زجاجا</shatr>
        </line>
        <line id="3">
          <shatr id="1">ولو أني وردتُ عذباً فراتاً</shatr>
          <shatr id="2">عادَ لا شكَّ فيه مِلْحاً أُجاجَا</shatr>
        </line>
        <line id="4">
          <shatr id="1">فإلى الله أشْتكي وإلى الفَضْـ</shatr>
          <shatr id="2">ـلِ فقد أَصْبَحَتْ بُزَاتِي دَجاجَا</shatr>
        </line>
      </lines>
    </poem>
    <poem id="7">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>شفيعي إل موسى سماح يمينه</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">شفِيعي إل مُوسَى سَمَاحُ يَمِينِهِ</shatr>
          <shatr id="2">وَحَسْبُ إمرِئٍ مِنْ شَافِعٍ بِسَمَاحِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">وشعريَ شعرٌ يشتهي الناسُ أكلهُ</shatr>
          <shatr id="2">كما يشتهى زبدٌ بزبِّ رباحِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="8">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>إن رياح اللؤم من شحه</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">إنَّ رياحَ اللؤمِ منْ شحه</shatr>
          <shatr id="2">لا يَطمَعُ الخنزيرُ في سَلْحِهِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">كفاهُ قفلٌ ضلَّ مفتاحهُ</shatr>
          <shatr id="2">قد يَئِسَ الحَدَّادُ مِنْ فَتْحِهِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="9">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>هيهات تضرب في حديد بارد</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="3">
        <line id="1">
          <shatr id="1">هيهاتَ تَضْرِبُ في حديدٍ باردٍ</shatr>
          <shatr id="2">إنْ كنتَ تطمعُ في نوالِ سعيدِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">والله لو مَلَكَ البِحَارَ بِأَسْرِها</shatr>
          <shatr id="2">وأتاهُ سلمٌ في زمانِ مدودِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">يَبْغِيهِ منها شَرْبَة ً لطَهُورِهِ</shatr>
          <shatr id="2">لأبى وقالَ تيممنْ بصعيدِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="10">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>قال لي الناس زر سعيد بن سلم</title>
      <qafya>ا</qafya>
      <type>قطعة</type>
      <lines number="3">
        <line id="1">
          <shatr id="1">قالَ لي الناسُ زرْ سعيدَ بنَ سلمٍ</shatr>
          <shatr id="2">قلتُ للناسِ: لاأزورُ سعيدا</shatr>
        </line>
        <line id="2">
          <shatr id="1">وأميري فتى خزاعة َ بالصرة ِ</shatr>
          <shatr id="2">قد عمها سماحاً وجودا</shatr>
        </line>
        <line id="3">
          <shatr id="1">ولنعمَ الفتى سعيدٌ ولكنْ</shatr>
          <shatr id="2">مالكٌ أكرمُ البرية ِ عودا</shatr>
        </line>
      </lines>
    </poem>
    <poem id="11">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>وأحببت من حبها الباخلين</title>
      <qafya>ا</qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">وأحببتُ من حبها الباخلينَ</shatr>
          <shatr id="2">حتى وَمِقْتُ کبنَ سلمٍ سَعِيدا</shatr>
        </line>
        <line id="2">
          <shatr id="1">إذا سيلَ عرفاً كسا وجههُ</shatr>
          <shatr id="2">ثياباً من اللُّؤمِ صُفْراً وَسُودا</shatr>
        </line>
      </lines>
    </poem>
    <poem id="12">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>لشتان مابين اليزيدين في الندى</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="4">
        <line id="1">
          <shatr id="1">لشتانَ مابينَ اليزيدينِ في الندى</shatr>
          <shatr id="2">إذا عدَّ في الناسِ المكارمُ والمجدُ</shatr>
        </line>
        <line id="2">
          <shatr id="1">يزيدُ بني شَيْبَانَ لأَكْرَمُ مِنْهُما</shatr>
          <shatr id="2">وإنْ غضبتْ قيسُ بنُ عيلانَ والأزدُ</shatr>
        </line>
        <line id="3">
          <shatr id="1">فتى لم تلدهُ من رعينٍ قبيلة ٌ</shatr>
          <shatr id="2">ولا لخمُ تنميهِ ولم تنمهِ نهدُ</shatr>
        </line>
        <line id="4">
          <shatr id="1">ولكنْ نَمَتْهُ الغُرُّ من آلِ وائلٍ</shatr>
          <shatr id="2">وَبَرَّة ُ تَنْمِيهِ وَمِنْ بَعْدِها هِنْدُ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="13">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>الصدق في أفواههم علقم</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">الصِّدْقُ في أفْوَاهِهِمْ عَلْقَمٌ</shatr>
          <shatr id="2">والإفكُ مثلُ العسلِ الماذي</shatr>
        </line>
        <line id="2">
          <shatr id="1">وكلهمْ في بخلهمْ صادقٌ</shatr>
          <shatr id="2">وفي النَّدَى لَيْسَ بأُسْتَاذِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="14">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>أنا بالأهواز محزون</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="3">
        <line id="1">
          <shatr id="1">أنا بالأهوازِ محزونٌ</shatr>
          <shatr id="2">وبالبصرة ِ داري</shatr>
        </line>
        <line id="2">
          <shatr id="1">في بني سعدٍ وسعد</shatr>
          <shatr id="2">حيثُ أهلي وقراري</shatr>
        </line>
        <line id="3">
          <shatr id="1">صرتُ كالخفاشِ لا</shatr>
          <shatr id="2">أبصرُ في ضوءِ النهارِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="15">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>وله لحية  تيس</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">وَلَهُ لحيَةُ تَيسٍ</shatr>
          <shatr id="2">وَلَهُ مِنقارُ نَسرِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">وَلَهُ نَكهَةُ لَيثٍ</shatr>
          <shatr id="2">خالَطَت نَكهَةَ صَقرِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="16">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>لولا ابن منصور وإفضاله</title>
      <qafya></qafya>
      <type>يتيم</type>
      <lines number="1">
        <line id="1">
          <shatr id="1">لولا ابنُ مَنْصُورٍ وإفضالُهُ</shatr>
          <shatr id="2">سلحتُ في لحية ِ منصورِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="17">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>ما كنت أحسب أن الخبز فاكهة </title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="4">
        <line id="1">
          <shatr id="1">ما كنتُ أحسبُ أنَّ الخبزَ فاكهة ٌ</shatr>
          <shatr id="2">حتى  نَزَلْتُ على أرضِ بن منصورِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">الحابسِ الروث في أعفاجِ بغلتهِ</shatr>
          <shatr id="2">خوفاً على الحبِّ من لقطِ العصافيرِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">يبسُ اليدينِ فما يستطعُ بسطهما</shatr>
          <shatr id="2">كأنَّ كفيهِ شدا بالمساميرِ</shatr>
        </line>
        <line id="4">
          <shatr id="1">عَهْدِي بهِ آنِفا في مَرْبَطٍ لَهُمُ</shatr>
          <shatr id="2">يُكَسْكِسُ الرَّوْثَ عن نَقْرِ العصافيرِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="18">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>الحمد لله شكرا</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="4">
        <line id="1">
          <shatr id="1">الحمدُ لله شكراً</shatr>
          <shatr id="2">أمْشِي ويركبُ غَيْرِي</shatr>
        </line>
        <line id="2">
          <shatr id="1">قد كنتُ آمل طِرْفاً</shatr>
          <shatr id="2">فَصِرْتُ أرْضَى بِعَيْرِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">ليت الأيُو.. دوابٌ</shatr>
          <shatr id="2">فكنتُ أركبُ أيـ</shatr>
        </line>
        <line id="4">
          <shatr id="1">لم ترضَ نَفْسِي بهذا</shatr>
          <shatr id="2">ياربِّ منكَ لخيرِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="19">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>مناي من دنياي هاتي التي</title>
      <qafya></qafya>
      <type>قصيدة</type>
      <lines number="10">
        <line id="1">
          <shatr id="1">منايَ من دنيايَ هاتي التي</shatr>
          <shatr id="2">تسلحُ بالرزقِ على غيري</shatr>
        </line>
        <line id="2">
          <shatr id="1">الجَرْدقُ الحاضِرُ مع بُضْعَة ٍ</shatr>
          <shatr id="2">من ماعزٍ رخيصٍ ومن طيرِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">وجرة ٌ تهدرُ ملآنة ً</shatr>
          <shatr id="2">تحكي قراة القسِّ في الديرِ</shatr>
        </line>
        <line id="4">
          <shatr id="1">وَجُبَّة ٌ دَكْنَاءُ فَضْفَاضَة ٌ</shatr>
          <shatr id="2">وَطيلسانٌ حَسَنُ النَّيْرِ</shatr>
        </line>
        <line id="5">
          <shatr id="1">وبغلة ٌ شهباءُ طيارة ٌ</shatr>
          <shatr id="2">تطوي ليَ البلدانَ في السيرِ</shatr>
        </line>
        <line id="6">
          <shatr id="1">وَبَدْرَة ٌ مملوءَة ٌ عَسْجَداً</shatr>
          <shatr id="2">ما بالذي أذْكُرُ من ضَيْرِ</shatr>
        </line>
        <line id="7">
          <shatr id="1">ومنزلٌ في خيرِ ماجيرة ٍ</shatr>
          <shatr id="2">قد عرفوا بالخيرِ والميرِ</shatr>
        </line>
        <line id="8">
