          <shatr id="2">أنت من أهلِ الزِّفافِ</shatr>
        </line>
        <line id="5">
          <shatr id="1">ساعة ً ثُمَّتَ جازوا</shatr>
          <shatr id="2">عنْ هوايَ في خلافِ</shatr>
        </line>
        <line id="6">
          <shatr id="1">نقروا إستي وباتوا</shatr>
          <shatr id="2">دون أهلي في لحافِ</shatr>
        </line>
        <line id="7">
          <shatr id="1">لَعَقُوا إسْتِي وقالوا</shatr>
          <shatr id="2">ريحُ مسكٍ بسلافِ</shatr>
        </line>
        <line id="8">
