    <poem id="48">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>ولقد قلت حين أجحرني البر</title>
      <qafya></qafya>
      <type>قصيدة</type>
      <lines number="15">
        <line id="1">
          <shatr id="1">ولقد قلتُ حين أجْحَرَني البَرْ</shatr>
          <shatr id="2">كما تجحرُ الكلابُ ثعالهْ</shatr>
        </line>
        <line id="2">
          <shatr id="1">في بُيَيْتٍ من الغَضَارَة ِ قَفْرٍ</shatr>
          <shatr id="2">ليسَ فيه إلاّ النوى والثخالهْ</shatr>
        </line>
        <line id="3">
          <shatr id="1">عطلتهُ الجرذانُ منْ قلة ِ الخيرِ</shatr>
          <shatr id="2">وطارَ الذُّبَابُ نحو زُبَالَهْ</shatr>
        </line>
        <line id="4">
          <shatr id="1">هارباتٍ منهُ إلى كلِّ خصبٍ</shatr>
          <shatr id="2">جيدة لمْ يرتجينَ منهُ بلالهْ</shatr>
        </line>
        <line id="5">
          <shatr id="1">وأقامَ السِّنَّوْرُ فيه بِشَرٍّ</shatr>
          <shatr id="2">يَسْألْ اللَّهَ ذا العُلا والجَلالَهْ</shatr>
        </line>
        <line id="6">
          <shatr id="1">أنْ يرى فأرة ً فلم يَرَ شَيْئاً</shatr>
          <shatr id="2">ناكساً رأسهُ لطولِ الملالهْ</shatr>
        </line>
        <line id="7">
          <shatr id="1">قلتُ لما رأيتهُ ناكسَ الرأسِ</shatr>
          <shatr id="2">كئيباً يمشي على شرِّ حالهْ</shatr>
        </line>
        <line id="8">
          <shatr id="1">قلتُ صبراً يانازُ رأسَ السنانيرِ</shatr>
          <shatr id="2">نِيرِ، وعلّلْتُهُ بِحُسْنِ مَقَالَهْ</shatr>
        </line>
        <line id="9">
          <shatr id="1">قال: لا صبرَ لي وكيفَ مقامي</shatr>
          <shatr id="2">في قِفَارٍ كمثلِ بِيدِ تَبَالَهْ</shatr>
        </line>
        <line id="10">
          <shatr id="1">لاأرى فيه فأرة ً أنغضُ الرأسَ</shatr>
          <shatr id="2">ومشيي في البيتِ مشيَ خيالهْ</shatr>
        </line>
        <line id="11">
          <shatr id="1">قلتُ: سرْ راشداً فخارَ لك اللهُ</shatr>
          <shatr id="2">ولاتعدُ كربجَ البقالهْ</shatr>
        </line>
        <line id="12">
          <shatr id="1">فإذا ماسمعتَ أنا بخيرٍ</shatr>
          <shatr id="2">في نعيمٍ منْ عيشة ٍ ومنالهْ</shatr>
        </line>
        <line id="13">
          <shatr id="1">فَائِتْنَا راشداً ولا تَعْدُوَنَّا</shatr>
          <shatr id="2">إنَّ مَنْ جَازَ رَحْلَنَا في ضَلالَهْ</shatr>
        </line>
        <line id="14">
          <shatr id="1">قال لي قولة ً عليكَ سلامٌ</shatr>
          <shatr id="2">غيرَ لعبٍ منه ولابطالهْ</shatr>
        </line>
        <line id="15">
