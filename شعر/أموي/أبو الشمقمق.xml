    <poem id="29">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>ماأراني إلا سأترك بغداد</title>
      <qafya></qafya>
      <type>قصيدة</type>
      <lines number="16">
        <line id="1">
          <shatr id="1">ماأراني إلا سأتركُ بغدادَ</shatr>
          <shatr id="2">وأهوي لكورة ِ الأهوازِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">حيثُ لاتنكرُ المعازفُ واللهوُ</shatr>
          <shatr id="2">وشربُ الفتى من التقمازِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">وجوارٍ كأنهنَّ نجومُ اللّـ</shatr>
          <shatr id="2">ـيلِ زهرٌ مثلُ الظِّبَاءِ الجَوَازِي</shatr>
        </line>
        <line id="4">
          <shatr id="1">واضحاتُ الخدودِ أدمٌ وَبِيضٌ</shatr>
          <shatr id="2">فاتناتٌ ميلٌ منَ الأعجازِ</shatr>
        </line>
        <line id="5">
          <shatr id="1">بينَ عوادة ٍ وأخرى بصنجٍ</shatr>
          <shatr id="2">في بساتينها وفي الأحوازِ</shatr>
        </line>
        <line id="6">
          <shatr id="1">ذاكَ خيرٌ منَ الترددِ في بغدادَ</shatr>
          <shatr id="2">تنزو بي البغالُ النوازي</shatr>
        </line>
        <line id="7">
          <shatr id="1">كلَّ يومٍ في كمة ٍ وقميصٍ</shatr>
          <shatr id="2">وَرِدَاءٍ من الغُبَارِ طرازِي</shatr>
        </line>
        <line id="8">
          <shatr id="1">لم يحكمهُ النساجُ يوماً لبيعٍ</shatr>
          <shatr id="2">لا ولا يُشترَى من البَزَّازِ</shatr>
        </line>
        <line id="9">
          <shatr id="1">أَخَذَتْ أهلَها الشياطينُ</shatr>
          <shatr id="2">بالركضِ لطولِ الشقاءِ والإعوازِ</shatr>
        </line>
        <line id="10">
          <shatr id="1">كلُّ شيخ تخاله حين يبدو</shatr>
          <shatr id="2">فوق بِرْذَوْنِهِ كشخصٍ حجازي</shatr>
        </line>
        <line id="11">
          <shatr id="1">وجميلُ الفُسَيْلِ أعْنِي ابنَ مَحْفُو</shatr>
          <shatr id="2">عدوُّ الندى وسلمُ المخازي</shatr>
        </line>
        <line id="12">
          <shatr id="1">ألِفَتْ إستُهُ الفَيَاشِلَ حتى</shatr>
          <shatr id="2">ما تشكى للطعنِ بالعكازِ</shatr>
        </line>
        <line id="13">
          <shatr id="1">يأخذ الأسْوَدَ الذي يفرق الحـ</shatr>
          <shatr id="2">منهُ كدستجِ المنخازِ</shatr>
        </line>
        <line id="14">
          <shatr id="1">ليثُ غابٍ بِدُبْرِهِ حين يَلْقَى</shatr>
          <shatr id="2">وَجَبَانٌ في الحربِ يومَ البرازِ</shatr>
        </line>
        <line id="15">
          <shatr id="1">بعدتْ دارهُ فلا ردهُ اللهُ</shatr>
          <shatr id="2">ولا زالَ نائيَ الدارِ شازي</shatr>
        </line>
        <line id="16">
          <shatr id="1">ذاكَ شخصٌ به عليَّ هوانٌ</shatr>
          <shatr id="2">كهوانِ الخصى على الخبازِ</shatr>
        </line>
      </lines>
    </poem>
