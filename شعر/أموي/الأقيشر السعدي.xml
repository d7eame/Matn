  <poems number="53">
    <poem id="1">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>ومسوف نشد الصبوح صبحته</title>
      <qafya></qafya>
      <type>يتيم</type>
      <lines number="1">
        <line id="1">
          <shatr id="1">وَمُسَوَّفٍ نَشَدَ الصَّبُوحَ صَبَحْتُهُ</shatr>
          <shatr id="2">قَبْلَ الصَّباحِ وَقَبْلَ كُلِّ نِدَاءِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="2">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>إنما لقحتنا باطية </title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="4">
        <line id="1">
          <shatr id="1">إنَّمَا لِقْحَتُنَا بَاطِيَة ٌ</shatr>
          <shatr id="2">فإذا ما مُزِجَتْ كَانَتْ عَجَبْ</shatr>
        </line>
        <line id="2">
          <shatr id="1">لَبَنٌ أصْفَرُ صَافٍ لَوْنُهُ</shatr>
          <shatr id="2">يَنْزَعُ البَاسُورَ مِنْ عَجْبِ الذَّنَبْ</shatr>
        </line>
        <line id="3">
          <shatr id="1">سَأَلَ الشُّرْطِيُّ أَنْ نَسْقِيَهُ</shatr>
          <shatr id="2">فَسَقَيْنَاهُ بأُنْبُوبِ القَصَبْ</shatr>
        </line>
        <line id="4">
          <shatr id="1">إِنَّمَا نَشْرَبُ مِنْ أَمْوَالِنَا</shatr>
          <shatr id="2">فَسَلُوا الشُّرْطِيَّ ما هذا الغَضَبْ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="3">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>حضرموت فتشت أحسابنا</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">حَضْرَمَوتٌ فَتَّشَتْ أَحْسَابَنَا</shatr>
          <shatr id="2">وَإلَيْنَا حَضْرَمَوْتٌ تَنْنَسِبْ</shatr>
        </line>
        <line id="2">
          <shatr id="1">إخْوَة ُ القِرْدِ وَهُمْ أَعْمَامُهُ</shatr>
          <shatr id="2">بَرِئَتْ مِنْكُمْ إلى اللَّهِ العَرَبْ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="4">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>وسألتني يوم الرحيل قصائدا</title>
      <qafya>ا</qafya>
      <type>قطعة</type>
      <lines number="3">
        <line id="1">
          <shatr id="1">وَسَأَلْتَنِي يَوْمَ الرَّحِيلِ قَصَائِداً</shatr>
          <shatr id="2">فَمَلأْتُهُنَّ قَصَائِداً وَكِتَابَا</shatr>
        </line>
        <line id="2">
          <shatr id="1">إنّي صَدَقْتُكَ إذْ وَجَدْتُكَ كَاذِباً</shatr>
          <shatr id="2">وَكَذَبْتَنِي فَوَجَدْتَنِي كَذَّابَا</shatr>
        </line>
        <line id="3">
          <shatr id="1">وَفَتَحْتُ بَاباً للخِيانَة ِ عَامِداً</shatr>
          <shatr id="2">لَمّا فَتَحْتَ مِنَ الخِيَانَة ِ بَابَا</shatr>
        </line>
      </lines>
    </poem>
    <poem id="5">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>تريك القذى من دونها وهي دونه</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">تُرِيْكَ القَذَى مِنْ دُوْنِهَا وَهْيَ دُوْنَهُ</shatr>
          <shatr id="2">لِوَجْهِ أَخِيْهَا فِي الإِنَاءِ قُطُوْبُ</shatr>
        </line>
        <line id="2">
          <shatr id="1">كُمَيْتٌ إذَا شُجَّتْ وَفِي الكَأْسِ وَرْدَة ٌ</shatr>
          <shatr id="2">لَهَا فِي عِظَامِ الشَّارِبِينَ دَبِيبُ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="6">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>يا أيها السائل عما مضى</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="3">
        <line id="1">
          <shatr id="1">يا أيُّهَا السَّائِلُ عَمَّا مَضَى</shatr>
          <shatr id="2">مِنْ عِلْمِ هذا الزَّمَنِ الذاهِبِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">إنْ كُنْتَ تَبْغِي العِلْمَ أَوْ أَهْلَهُ</shatr>
          <shatr id="2">أَوْ شَاهِداً يُخْبِرُ عَنْ غَائِبِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">فاختَبِرِ الأرْضَ بِأَسْمَائِها</shatr>
          <shatr id="2">وَاعْتَبِرِ الصَّاحِبَ بالصَّاحِبِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="7">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>إن كانت الخمر قد عزت وقد منعت</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="4">
        <line id="1">
          <shatr id="1">إنْ كَانَتِ الخَمْرُ قَدْ عَزَّتْ وَقَدْ مُنِعَتْ</shatr>
          <shatr id="2">وَحَالَ مِنْ دُونِهَا الإسْلاَمُ والحَرَجُ</shatr>
        </line>
        <line id="2">
          <shatr id="1">فَقَدْ أُبَاكِرُهَا صِرْفاً وَأَشْرَبُهَا</shatr>
          <shatr id="2">أَشْفِي بِهَا غُلَّتِي صِرْفاً وأَمْتَزِجُ</shatr>
        </line>
        <line id="3">
          <shatr id="1">وَقَدْ تَقُومُ عَلَى رَأسِي مُغَنِّيَة ٌ</shatr>
          <shatr id="2">لَهَا إذَا رَجَّعَتْ فِي صَوْتِهَا غَنَجُ</shatr>
        </line>
        <line id="4">
          <shatr id="1">وَتَرْفَعُ الصَّوْتَ أحْيَاناً وَتَخْفِضُهُ</shatr>
          <shatr id="2">كَمَا يَطِنُّ ذُبَابُ الرَّوْضَة ِ الهَزِجُ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="8">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>أتدعوني الأقيشر ذلك اسمي</title>
      <qafya>ي</qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">أَتَدْعُوني الأُقَيْشِرَ ذَلِكَ اسْمِي</shatr>
          <shatr id="2">وَأَدْعُوكَ ابْنَ مُطْفِئَة ِ السِّرَاجِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">تُناجِي خِدْنَهَا باللَّيْلِ سِرّاً</shatr>
          <shatr id="2">وَرَبُّ النَّاسِ يَعْلَمُ مَا تُنَاجِي</shatr>
        </line>
      </lines>
    </poem>
    <poem id="9">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>غضبت دودان من مسجدنا</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="4">
        <line id="1">
          <shatr id="1">غَضِبَتْ دُودَانُ مِنْ مَسْجِدِنَا</shatr>
          <shatr id="2">وَبِهِ يَعْرِفُهُمْ كُلُّ أحَدْ</shatr>
        </line>
        <line id="2">
          <shatr id="1">لَوْ هَدَمْنا غُدْوَة ً بُنْيَانَهُ</shatr>
          <shatr id="2">لاَنْمَحَتْ أسْمَاؤُهُمْ طُولَ الأبَدْ</shatr>
        </line>
        <line id="3">
          <shatr id="1">إسْمُهُمْ فِيهِ وَهُمْ جِيرَانُهُ</shatr>
          <shatr id="2">وَاسْمُهُ الدَّهْرَ لِعَمْرِو بْنِ أسَدْ</shatr>
        </line>
        <line id="4">
          <shatr id="1">كُلَّمَا صَلَّوا قَسَمْنَا أَجْرَهُ</shatr>
          <shatr id="2">فَلَهَا النِّصْفُ عَلَى كُلِّ جَسَدْ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="10">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>وبنوا دودان حي سادة </title>
      <qafya></qafya>
      <type>يتيم</type>
      <lines number="1">
        <line id="1">
          <shatr id="1">وَبَنُوا دُودَانَ حِيٌّ سَادَة ٌ</shatr>
          <shatr id="2">حَلَّ بَيْتُ المَجْدِ فِيهِمْ والعَدَدْ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="11">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>ولقد أروح بمشرف ذي ميعة </title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="3">
        <line id="1">
          <shatr id="1">وَلَقَدْ أَرُوحُ بِمُشْرِفٍ ذِي مَيْعَة ٍ</shatr>
          <shatr id="2">عَسِرِ المَكَرَّة ِ مَاؤُهُ يَتَفَصَّدُ</shatr>
        </line>
        <line id="2">
          <shatr id="1">مَرِحٍ يَطِيرُ مِنَ المِرَاحِ لُعَابُهُ</shatr>
          <shatr id="2">وَيَكَادُ جِلْدُ إهَابِهِ يَتَقَدَّدُ</shatr>
        </line>
        <line id="3">
          <shatr id="1">حَتَّى عَلَوْتُ بِهِ مَشَقَّ ثَنِيَّة ٍ</shatr>
          <shatr id="2">طَوْراً أغُورُ بِهَا وَطَوْراً أُنْجِدُ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="12">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>أيا صاحبي أبشر بزورتنا الحمى</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">أَيَا صَاحِبِي أَبْشِرْ بِزَوْرَتِنَا الحِمَى</shatr>
          <shatr id="2">وَأَهْلُ الحِمَى مِنْ مُبْغضٍ وَوَدُودِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">قَدِ اخْتَلَجَتْ عَيْنِي فَدَلَّ اخْتِلاَجُهَا</shatr>
          <shatr id="2">عَلَى حُسْنٍ وَصْلٍ بَعْدَ قُبْحِ صُدُودِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="13">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>إما تراني قد هلكت فإنما</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">إِمَّا تَرَانِي قَدْ هَلَكْتُ فَإنَّما</shatr>
          <shatr id="2">رَمَضَانُ أَهْلَكَنِي وَدِينُ أُسَيْدِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">هذَا يُصَرِّدُني فَلَستُ بِشَاربٍ</shatr>
          <shatr id="2">وَأخٌ يُؤَرِّقُني مَعَ التَّصْرِيدِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="14">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>رب ندمان كريم ماجد</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="5">
        <line id="1">
          <shatr id="1">رُبَّ نَدْمانٍ كَرِيمٍ مَاجدٍ</shatr>
          <shatr id="2">سَيِّدِ الجَدَّيْنِ مِنْ فَرْعَيْ مُضَرْ</shatr>
        </line>
        <line id="2">
          <shatr id="1">قّدْ سَقَيْتُ الكَأْسَ حَتَّى هَرَّهَا</shatr>
          <shatr id="2">لَم يُخَالِطْ صَفْوَهَا مِنْهُ كَدَرْ</shatr>
        </line>
        <line id="3">
          <shatr id="1">قُلْتُ: قُمْ صَلِّ، فَصَلَّى قَاعِداً</shatr>
          <shatr id="2">تَتَغَشَّاهُ سَمَادِيرُ السَّكَرْ</shatr>
        </line>
        <line id="4">
          <shatr id="1">قَرَنَ الظُّهْرَ مَعَ العَصْرِ كَمَا</shatr>
          <shatr id="2">تُقْرَنُ الحِقَّة ُ بالحِقَّ الذَّكَرْ</shatr>
        </line>
        <line id="5">
          <shatr id="1">تَرَكَ «الفَجْرَ» فَمَا يَقْرَأُهَا</shatr>
          <shatr id="2">وَقَرا "الكَوْثَرَ" مِنْ بيْنِ السُّوَرْ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="15">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>ومقعد قوم قد مشى من شرابنا</title>
      <qafya>ا</qafya>
      <type>قطعة</type>
      <lines number="6">
        <line id="1">
          <shatr id="1">وَمُقْعَدِ قَوْمٍ قَدْ مَشَى مِنْ شَرَابِنَا</shatr>
          <shatr id="2">وأَعْمَى سَقَيْنَاهُ ثَلاثاً فَأَبْصَرَا</shatr>
        </line>
        <line id="2">
          <shatr id="1">شَرَاباً كَرِيحِ العَنْبَرِ الوَرْدِ رِيحُهُ</shatr>
          <shatr id="2">وَمَسْحُوقَ هِنْدِيٍّ مِنَ المِسْكِ أَذْفَرَا</shatr>
        </line>
        <line id="3">
          <shatr id="1">مِنَ الفَتَيَاتِ الغُرِّ مِنْ أرْضِ بَابِلٍ</shatr>
          <shatr id="2">إذَا صَبَّهَا الحَانيُّ فِي الكَأْسِ كَبَّرَا</shatr>
        </line>
        <line id="4">
          <shatr id="1">لَهَا مِنْ زُجَاجِ الشَّامِ عُنْقٌ غَرِيبَة ٌ</shatr>
          <shatr id="2">تَأَنَّقَ فِيهَا صَانِعٌ وَتَحَيَّرَا</shatr>
        </line>
        <line id="5">
          <shatr id="1">ذَخَائِرُ فِرْعَوْنَ التي جُبِيَتْ لَهُ</shatr>
          <shatr id="2">وَكُلٌّ يُسَمَّى بالعَتِيقِ مُشَهَّرَا</shatr>
        </line>
        <line id="6">
          <shatr id="1">إذَا مَا رَآهَا بَعْدَ إنْقَاءْ غُسْلِهَا</shatr>
          <shatr id="2">تَدُورُ عَلَيْنَا صَائِمُ القَوْمِ أفْطَرَا</shatr>
        </line>
      </lines>
    </poem>
    <poem id="16">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>ومن لي بأن أسطيع أن أذكر اسمه</title>
      <qafya>ا</qafya>
      <type>يتيم</type>
      <lines number="1">
        <line id="1">
          <shatr id="1">وَمَنْ لِي بِأنْ أَسْطِيعَ أنْ أَذْكُرُ اسْمَهُ</shatr>
          <shatr id="2">وَأعْيَا عِقَالاً أنْ يُطِيقَ لَهُ ذِكْرَا</shatr>
        </line>
      </lines>
    </poem>
    <poem id="17">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>لسانك من شكر ثقيل عن التقى</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="3">
        <line id="1">
          <shatr id="1">لِسَانُكَ مِنْ شكْرٍ ثَقِيلٌ عَنِ التُّقَى</shatr>
          <shatr id="2">وَلكِنَّهُ بالمُخْزِيَاتِ طَلِيقُ</shatr>
        </line>
        <line id="2">
          <shatr id="1">وَأَنْتُ حَقِيقٌ يَا أُقَيْشِرُ أنْ تُرَى</shatr>
          <shatr id="2">كَذَاكَ إذَا ما كُنْتَ غَيْرَ مُفيقِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">تَسُفُّ مِنَ الصَّهْباءِ صِرْفاً تَخَالُها</shatr>
