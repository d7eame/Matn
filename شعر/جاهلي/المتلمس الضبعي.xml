    <poem id="1">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>أنت مثبور غوي مترف</title>
      <qafya></qafya>
      <type>يتيم</type>
      <lines number="1">
        <line id="1">
          <shatr id="1">أَنتَ مَثبورٌ غَوِيٌ مُترَفٌ</shatr>
          <shatr id="2">ذو غَواياتٍ وَمَسرورٌ بَطِرُ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="2">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>لعلك يوما أن يسرك أنني</title>
      <qafya>&#13;</qafya>
      <type>قطعة</type>
      <lines number="4">
        <line id="1">
          <shatr id="1">لَعلَّكَ يَوماً أَن يَسُرَّكَ أَنَّني</shatr>
          <shatr id="2">شَهِدتُ وَقد رَمَّت عِظاميَ في قَبري</shatr>
        </line>
        <line id="2">
          <shatr id="1">فتُصبِحُ مَظلوماً تُسامُ دَنِيَّةً</shatr>
          <shatr id="2">حَريصاً عَلى مِثلي فَقيراً إِلى نَصري</shatr>
        </line>
        <line id="3">
          <shatr id="1">وَيَهجُرُكَ الإِخوانُ بَعدي وَتُبتَلى</shatr>
          <shatr id="2">وَيَنصُرُني مِنكَ المَليكُ فَلا تَدرِي</shatr>
        </line>
        <line id="4">
          <shatr id="1">وَلَو كُنتُ حَيّاً قَبلَ ذَلِكَ لَم تُرَم</shatr>
          <shatr id="2">لَهُ خُطَّةٌ خَسفاً وَشووِرتَ في الأَمرِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="3">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>أخوك الذي إن ربته قال إنما</title>
      <qafya>ه</qafya>
      <type>يتيم</type>
      <lines number="1">
        <line id="1">
          <shatr id="1">أَخوكَ الَّذي إِن رِبتَهُ قالَ إِنَّما</shatr>
          <shatr id="2">أَرِبتُ وَإِن لايَنتَهُ لانَ جانِبُه</shatr>
        </line>
      </lines>
    </poem>
    <poem id="4">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>ألا أبلغا أفناء سعد بن مالك</title>
      <qafya>ه</qafya>
      <type>يتيم</type>
      <lines number="1">
        <line id="1">
          <shatr id="1">أَلا أَبلِغا أَفناءَ سَعدِ بنِ مالِكٍ</shatr>
          <shatr id="2">رِسالَةَ مَن قَد صارَ في الغُربِ جانِبُه</shatr>
        </line>
      </lines>
    </poem>
    <poem id="5">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>لم يرجعوا من خشية الموت والردى</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">لَم يَرجِعوا مِن خَشيَةِ المَوتِ وَالرَّدى</shatr>
          <shatr id="2">وَقَد جَلَبَتها مِن بَعيدٍ جَوالِبُ</shatr>
        </line>
        <line id="2">
          <shatr id="1">سَيَمنَعُها مِن أَن تَرُدَّ حَفيظَةً</shatr>
          <shatr id="2">فَوارِسُ صَعبٍ وَالكُماةُ مُحَارِبُ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="6">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>جزاني أخو لخم على ذات بيننا</title>
      <qafya></qafya>
      <type>يتيم</type>
      <lines number="1">
        <line id="1">
          <shatr id="1">جَزاني أَخو لَخمٍ عَلى ذاتِ بَينِنا</shatr>
          <shatr id="2">جَزاءَ سِنمارَ وَما كانَ ذا ذَنبِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="7">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>قليتك فاقليني فلا وصل بيننا</title>
      <qafya>ه</qafya>
      <type>قطعة</type>
      <lines number="4">
        <line id="1">
          <shatr id="1">قَلَيتُكِ فَاِقلِيني فَلا وَصلَ بَينَنا</shatr>
          <shatr id="2">كَذَلِكَ مَن يَستَغنِ يَستَغنِ صاحِبُه</shatr>
        </line>
        <line id="2">
          <shatr id="1">خَليلٌ بَدا لي النُّصحُ مِنهُ فَلَم أَكُن</shatr>
          <shatr id="2">لِأَصرِمَهُ ما سَوَّغَ الماءَ شارِبُه</shatr>
        </line>
        <line id="3">
          <shatr id="1">عَصاني فَما لاقى الرَشادَ وَإِنَّما</shatr>
          <shatr id="2">تَبَيَّنُ عَن أَمرِ الغَوِيِّ عَواقِبُه</shatr>
        </line>
        <line id="4">
          <shatr id="1">عَصاني فَما لاقى الرَشادَ وَإِنَّما</shatr>
          <shatr id="2">تَبَيَّنُ عَن أَمرِ الغَوِيِّ عَواقِبُه</shatr>
        </line>
      </lines>
    </poem>
    <poem id="8">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>فلو أن محموما بخيبر مدنفا</title>
      <qafya>ه</qafya>
      <type>يتيم</type>
      <lines number="1">
        <line id="1">
          <shatr id="1">فَلَو أَنَّ مَحموماً بِخَيبَرَ مُدنَفاً</shatr>
          <shatr id="2">تَنَشَّقَ رَيّاها لَأَقلَعَ صالِبُه</shatr>
        </line>
      </lines>
    </poem>
    <poem id="9">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>عصاني فما لاقى الرشاد وإنما</title>
      <qafya>ه</qafya>
      <type>قطعة</type>
      <lines number="3">
        <line id="1">
          <shatr id="1">عَصاني فَما لاقَى الرَشادَ وَإِنَّما</shatr>
          <shatr id="2">تَبَيَّنَ مِن أَمرِ الغَوِيِّ عَواقِبُه</shatr>
        </line>
        <line id="2">
          <shatr id="1">فَأَصبَحَ مَحمولاً عَلى ظَهرِ أَلَّةٍ</shatr>
          <shatr id="2">يَمُجُّ نَجِيعَ الجَوفِ مِنهُ تَرائِبُه</shatr>
        </line>
        <line id="3">
          <shatr id="1">فَإِلاّ تَجلَّلَها يُعالوكَ فَوقَها</shatr>
          <shatr id="2">وَكيفَ تَوَقَّى ظَهرَ ما أَنتَ راكِبُه</shatr>
        </line>
      </lines>
    </poem>
    <poem id="10">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>إن الحبيبة حبها لم ينفد</title>
      <qafya></qafya>
      <type>قصيدة</type>
      <lines number="18">
        <line id="1">
          <shatr id="1">إِنَّ الحَبيبَةَ حُبُّها لَم يَنفَدِ</shatr>
          <shatr id="2">وَاليَأسُ يُسلي لَو سَلَوتَ أَخادَدِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">قَد طالَ ما أَحبَبتَها وَوَدِدتَها</shatr>
          <shatr id="2">لَو كانَ يُغني عَنكَ طولُ تَوَدُّدِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">إنَّ العِراقَ وَأَهلَهُ كانُوا الهَوى</shatr>
          <shatr id="2">فَإِذا نَأى بي وُدُّهُم فَليَبعُدِ</shatr>
        </line>
        <line id="4">
          <shatr id="1">فَلتَترُكَنَّهُمُ بِلَيلٍ ناقَتي</shatr>
          <shatr id="2">تَذَرُ السِماكَ وَتَهتَدي بِالفَرقَدِ</shatr>
        </line>
        <line id="5">
          <shatr id="1">تَعدو إِذا وَقَعَ المُمَرُّ بِدَفِّها</shatr>
          <shatr id="2">عَدوَ النَحوصِ تَخافُ ضيقَ المَرصَدِ</shatr>
        </line>
        <line id="6">
          <shatr id="1">أُجُدٌ إِذا اِستَنفَرتُها مِن مَبرَكٍ</shatr>
          <shatr id="2">حُلِبَت مَغابِنُها بِرُبٍّ مُعقَدِ</shatr>
        </line>
        <line id="7">
          <shatr id="1">وَإِذا الرِكابُ تَواكَلَت بَعدَ السُرى</shatr>
          <shatr id="2">وَجَرى السَرابُ عَلى مُتونِ الجَدجَدِ</shatr>
        </line>
        <line id="8">
          <shatr id="1">مَرِحَت وَطاحَ المَروُ مِن أَخفافِها</shatr>
          <shatr id="2">جَذبَ القَرينَةِ لِلنَجاءِ الأَجرَدِ</shatr>
        </line>
        <line id="9">
          <shatr id="1">لِبِلادِ قَومٍ لا يُرامُ هَدِيُّهُم</shatr>
          <shatr id="2">وَهَدِيُّ قَومٍ آخَرينَ هُوَ الرَدِي</shatr>
        </line>
        <line id="10">
          <shatr id="1">كَطُرَيفَةَ بنِ العَبدِ كانَ هَدِيَّهُم</shatr>
          <shatr id="2">ضَربوا قَذالَةَ رَأسِهِ بِمُهَنَّدِ</shatr>
        </line>
        <line id="11">
          <shatr id="1">وَاِبنى أُمامَةَ قَد أَخَذتَ كِلَيهِما</shatr>
          <shatr id="2">وَإِخالُ أنَّكَ ثالِثٌ بِالأَسوَدِ</shatr>
        </line>
        <line id="12">
          <shatr id="1">إِنَّ الخيانَةَ وَالمَغالَةَ وَالخَنا</shatr>
          <shatr id="2">وَالغَدرَ أَترُكُهُ بِبَلدَةِ مُفسِدِ</shatr>
        </line>
        <line id="13">
          <shatr id="1">مَلِكٌ يُلاعِبُ أُمَّهُ وَقَطِينَها</shatr>
          <shatr id="2">رِخوَ المَفاصِلِ أيرُهُ كالمِروَدِ</shatr>
        </line>
        <line id="14">
          <shatr id="1">بِالبابِ يَطلُبُ كُلَّ طالِبِ حاجَةٍ</shatr>
          <shatr id="2">فَإِذا خَلا فَالمَرءُ غَيرُ مُسَدَّدِ</shatr>
        </line>
        <line id="15">
          <shatr id="1">فَإِذا حَلَلتُ وَدونَ بَيتَي غاوَةٌ</shatr>
          <shatr id="2">فَاِبرُق بِأَرضِكَ ما بَدا لَكَ وارعُدِ</shatr>
        </line>
        <line id="16">
          <shatr id="1">أَبَني قِلابَةَ لَم تَكُن عاداتُكُم</shatr>
          <shatr id="2">أَخذَ الدَنِيَّةِ قَبلَ خُطَّةِ مِعضَدِ</shatr>
        </line>
        <line id="17">
          <shatr id="1">لَن يَرحَضَ السَوءاتَ عن أَحسابِكُم</shatr>
          <shatr id="2">نَعَمُ الحَواثِرِ إِذ تُساقُ لِمَعبَدِ</shatr>
        </line>
        <line id="18">
          <shatr id="1">فَالعَبدُ عَبدُكُمُ اِقتُلوا بِأَخيكُمُ</shatr>
          <shatr id="2">كالعَيرِ أَعرَضَ جَنبَهُ لِلمِطرَدِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="11">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>إن الهوان حمار القوم يعرفه</title>
      <qafya></qafya>
      <type>قصيدة</type>
      <lines number="9">
        <line id="1">
          <shatr id="1">إِنَّ الهَوانَ حِمارُ القَومِ يَعرِفُهُ</shatr>
          <shatr id="2">والحُرُّ يُنكِرُهُ والرَّسلَةُ الأُجُدُ</shatr>
        </line>
        <line id="2">
          <shatr id="1">كونوا كَبَكرٍ كَما قَد كانَ أَوَّلُكُم</shatr>
          <shatr id="2">وَلا تَكونوا كَعَبدِ القَيسِ إِذ قَعَدوا</shatr>
        </line>
        <line id="3">
          <shatr id="1">يُعطونَ ما سُئِلوا وَالخَطُّ مَنزِلُهُم</shatr>
          <shatr id="2">كَما أَكَبَّ عَلى ذِي بَطنِهِ الفَهَدُ</shatr>
        </line>
        <line id="4">
          <shatr id="1">وَلَن يُقيمَ عَلى خَسفٍ يُسامُ بِهِ</shatr>
          <shatr id="2">إِلاّ الأَذَلاّنِ عَيرُ الأَهلِ وَالوَتِدُ</shatr>
        </line>
        <line id="5">
          <shatr id="1">هَذا عَلى الخَسفِ مَربوطٌ بِرُمَّتهِ</shatr>
          <shatr id="2">وَذا يُشَجُّ فما يَرثي لَهُ أَحَدُ</shatr>
        </line>
        <line id="6">
          <shatr id="1">فَإِن أَقَمتُم عَلى ضَيمٍ يُرادُ بِكُم</shatr>
          <shatr id="2">فَإِنَّ رَحلي لَكُم وَالٍ وَمُعتَمَدُ</shatr>
        </line>
        <line id="7">
          <shatr id="1">كونوا كَسامَةَ إِذا شَعفٌ مَنازِلُهُ</shatr>
          <shatr id="2">إِذ قِيلَ جَيشٌ وَجَيشٌ حافِظٌ رَصَدُ</shatr>
        </line>
        <line id="8">
          <shatr id="1">شَدَّ المَطيَّةَ بِالأَنساعِ فَاِنحَرَفَت</shatr>
          <shatr id="2">عُرضَ التَنوفَةِ حَتّى مَسَّها النَجَدُ</shatr>
        </line>
        <line id="9">
          <shatr id="1">وَفي البِلادِ إِذا ما خِفتَ نائِرَةً</shatr>
          <shatr id="2">مَشهورَةً عَن وُلاةِ السَوءِ مُبتَعَدُ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="12">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>لكنه حوض من أودى بإخوته</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="3">
        <line id="1">
          <shatr id="1">لَكِنَّهُ حَوضُ مَن أَودَى بِإِخوَتِهِ</shatr>
          <shatr id="2">رَيبُ المَنُونِ فَأَضحَى بَيضَةَ البَلَدِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">لَو كانَ يُشكى إلى الأَمواتِ ما لَقِيَ ال</shatr>
          <shatr id="2">أَحياءُ بَعدَهُمُ مِن شِدَّةِ الكَمَدِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">ثُمَّ اِشتَكَيتُ لَأَشكاني وَساكِنُهُ</shatr>
          <shatr id="2">قَبرٌ بِسِنجارَ أَو قَبرٌ عَلى قَهَدِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="13">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>صبا من بعد سلوته فؤادي</title>
      <qafya></qafya>
      <type>قصيدة</type>
      <lines number="8">
        <line id="1">
          <shatr id="1">صَبا مِن بَعدِ سَلوَتِه فُؤادي</shatr>
          <shatr id="2">وأَسمَحَ لِلقَرينَةِ بِاِنقيادِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">كَأَنّي شارِبٌ يَومَ اِستَبَدُّوا</shatr>
          <shatr id="2">وَحَثَّ بِهِم لَدَى المَوماةِ حادِ</shatr>
        </line>
        <line id="3">
          <shatr id="1">عُقاراً عُتِّقَت في الدَنِّ حَتّى</shatr>
          <shatr id="2">كَأَنَّ حَبابَها حَدَقُ الجَرادِ</shatr>
        </line>
        <line id="4">
          <shatr id="1">جَمادِ لَها جَمادِ وَلا تَقولي</shatr>
          <shatr id="2">لَها أَبَداً إِذا ذُكِرَت حَمادِ</shatr>
        </line>
        <line id="5">
          <shatr id="1">فَإِمّا حُبُّها عَرَضاً وَإِمّا</shatr>
          <shatr id="2">بَشاشَةُ كُلِّ عِلقٍٍ مُستَفادِ</shatr>
        </line>
        <line id="6">
          <shatr id="1">وَأَعلَمُ عِلمَ حَقٍّ غَيرَ ظَنٍّ</shatr>
          <shatr id="2">وَتَقوى اللَهِ مِن خَيرِ العَتادِ</shatr>
        </line>
        <line id="7">
          <shatr id="1">لَحِفظُ المالِ أيسَرُ مِن بُغاهُ</shatr>
          <shatr id="2">وَسَيرٍ في البِلادِ بِغَيرِ زادِ</shatr>
        </line>
        <line id="8">
          <shatr id="1">وَإِصلاحُ القَليلِ يَزيدُ فيهِ</shatr>
          <shatr id="2">وَلا يَبقَى الكَثيرُ مَعَ الفَسادِ</shatr>
        </line>
      </lines>
    </poem>
    <poem id="14">
