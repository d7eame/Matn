    <poem id="32">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>يشتاق قلبي إلى مليكة لو</title>
      <qafya>ا</qafya>
      <type>قصيدة</type>
      <lines number="8">
        <line id="1">
          <shatr id="1">يَشتاقُ قَلبي إِلى مَليكَةٍ لَو</shatr>
          <shatr id="2">أَمسَت قَريباً مِمَّن يُطالِبُها</shatr>
        </line>
        <line id="2">
          <shatr id="1">ما أَحسَنَ الجيدِ مِن مَليكَةٍ وَال</shatr>
          <shatr id="2">لَبّاتِ إِذ زانَها تَرائِبُها</shatr>
        </line>
        <line id="3">
          <shatr id="1">يا لَيتَني لَيلَةً إِذا هَجعَ النّا</shatr>
          <shatr id="2">سُ وَنامَ الكِلابَ صاحِبُها</shatr>
        </line>
        <line id="4">
          <shatr id="1">في لَيلَةٍ لا يُرى بِها أَحَدٌ</shatr>
          <shatr id="2">يَسعى عَلَينا إِلاّ كَواكِبُها</shatr>
        </line>
        <line id="5">
          <shatr id="1">لِتَبكِني قَينَةٌ وَمَزهَرُها</shatr>
          <shatr id="2">وَلتَبكِني قَهوَةٌ وَشارِبُها</shatr>
        </line>
        <line id="6">
          <shatr id="1">وَلتَبكِني ناقَةٌ إِذا رَحَلَت</shatr>
          <shatr id="2">وَغابَ في سَردَحٍ مَناكِبُها</shatr>
        </line>
        <line id="7">
          <shatr id="1">وَلتَبكِني عُصبَةٌ إِذا إِجتَمَعَت</shatr>
          <shatr id="2">لَم يَعلَمِ الناسُ ما عَواقِبُها</shatr>
        </line>
        <line id="8">
          <shatr id="1">فَما تُرَجّي النُفوسُ مِن طَلَبِ ال</shatr>
          <shatr id="2">خَيرِ وَحُبُّ الحَياةِ كاذِبُها</shatr>
        </line>
      </lines>
    </poem>
