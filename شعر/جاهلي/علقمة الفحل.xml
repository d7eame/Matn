    <poem id="24">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>من رجل أحبوه رحلي وناقتي</title>
      <qafya></qafya>
      <type>قطعة</type>
      <lines number="6">
        <line id="1">
          <shatr id="1">مَنْ رَجلٌ أحبُوهُ رَحلي وناقَتي</shatr>
          <shatr id="2">يُبَلِّغُ عني الشِّعرَ إذ ماتَ قَائلُه</shatr>
        </line>
        <line id="2">
          <shatr id="1">نَذيراً وما يُغني النَّذيرُ بِشَبوَة ٍ</shatr>
          <shatr id="2">لِمن شاؤهُ حَولَ البَديِّ وجامِلُه</shatr>
        </line>
        <line id="3">
          <shatr id="1">فقُل لِتميمٍ تَجعَلِ الرَّملَ دونَها</shatr>
          <shatr id="2">وغيرُ تَميم في الهزاهز جاهِلُه</shatr>
        </line>
        <line id="4">
          <shatr id="1">فإنَّ أبا قابوسَ بَيني وبَينها</shatr>
          <shatr id="2">بِأرعَنَ يَنفي الطَّيرَ حُمرٍ مَناقِلهْ</shatr>
        </line>
        <line id="5">
          <shatr id="1">إذا ارتَحلُوا أصَمَّ كلَّ مُؤَيِّة ٍ</shatr>
          <shatr id="2">وكلَّ مُهيبٍ نَقرُه وَصَواهِلُهْ</shatr>
        </line>
        <line id="6">
          <shatr id="1">فلا أعرِفَنْ سَبْياً تُمًدُّ ثُدِيُّهُ</shatr>
          <shatr id="2">إلى مُعرِضٍ عن صِهرِه لا يُواصِلُهُ</shatr>
        </line>
      </lines>
    </poem>
