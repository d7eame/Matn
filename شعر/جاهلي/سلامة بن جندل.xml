    <poem id="25">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>فسائل بسعدي في خندف</title>
      <qafya>ا</qafya>
      <type>قصيدة</type>
      <lines number="14">
        <line id="1">
          <shatr id="1">فسائلْ بسَعدَيَّ في خِندفٍ</shatr>
          <shatr id="2">وقيسٍ، وعندكَ تبيانها</shatr>
        </line>
        <line id="2">
          <shatr id="1">وإنْ تسألِ الحيَّ من وائلٍ</shatr>
          <shatr id="2">تنبئكَ عجلٌ، وشيبانها</shatr>
        </line>
        <line id="3">
          <shatr id="1">بوادِي جَدُودَ، وقَد غُودِرَتْ</shatr>
          <shatr id="2">بصيقِ السَّنابكِ أعطانها</shatr>
        </line>
        <line id="4">
          <shatr id="1">بأرعنَ، كالطودِ، من وائئلٍ</shatr>
          <shatr id="2">يَؤُمُّ الثُّغورَ، يَعْتانُها</shatr>
        </line>
        <line id="5">
          <shatr id="1">تكادُ له الأرضُ، منْ رزهِ</shatr>
          <shatr id="2">إذا سار، ترجفُ أركانها</shatr>
        </line>
        <line id="6">
          <shatr id="1">قداميسُ، يقدمها الحوافزانُ</shatr>
          <shatr id="2">وأَبجَرُ، تَخفِقُ عِقبانُها</shatr>
        </line>
        <line id="7">
          <shatr id="1">وجَثّام، إِذ سارَ في قَومهِ</shatr>
          <shatr id="2">سَفاها إِلَينا، وحُمرانُها</shatr>
        </line>
        <line id="8">
          <shatr id="1">وتغلبُ، إذ حربها لاقحٌ</shatr>
          <shatr id="2">تُشَبُّ، وتُسعَرُ نِيرانُها</shatr>
        </line>
        <line id="9">
          <shatr id="1">غداة َ أتانا صريخُ الرّبابِ</shatr>
          <shatr id="2">ولم يكُ يصلحُ خذلانها</shatr>
        </line>
        <line id="10">
          <shatr id="1">صَرِيخٌ لضَبَّة َ، يَومَ الهُذَيلِ</shatr>
          <shatr id="2">وضَبَّة ُ تُردَفُ نِسوانُها</shatr>
        </line>
        <line id="11">
          <shatr id="1">تداركهمْ، والضُّحى غدوة ٌ،</shatr>
          <shatr id="2">خناذيذُ تشعلُ أعطانها</shatr>
        </line>
        <line id="12">
          <shatr id="1">بأُسدٍ منَ الفِرزِ، غُلْبِ الرِّقابِ</shatr>
          <shatr id="2">مصاليتَ، لم يخشَ إدهانها</shatr>
        </line>
        <line id="13">
          <shatr id="1">فحَطَّ الرَّبِيعَ فَتًى شَرمَحٌ</shatr>
          <shatr id="2">أَخوذُ الرَّغائبِ، مَصنانُها</shatr>
        </line>
        <line id="14">
          <shatr id="1">فقاظُ، وفي الجيدِ مشهورة ٌ</shatr>
          <shatr id="2">يُغَنِّيهِ في الغُلِّ إِرنانُها</shatr>
        </line>
      </lines>
    </poem>
    <poem id="26">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>سائل بنا يوم ورد الكلا</title>
      <qafya>ا</qafya>
      <type>يتيم</type>
      <lines number="1">
        <line id="1">
          <shatr id="1">سائلْ بنا يومَ وردِ الكلا</shatr>
          <shatr id="2">بِ تخبركَ دوسٌ وهمدانها</shatr>
        </line>
      </lines>
    </poem>
    <poem id="27">
      <bahr>None</bahr>
      <genre>None</genre>
      <title>هو المدخل النعمان في أرض فارس</title>
      <qafya></qafya>
      <type>نتفة</type>
      <lines number="2">
        <line id="1">
          <shatr id="1">هو المدخلُ النعمانَ في أرضِ فارسٍ</shatr>
          <shatr id="2">وجاعِلهُ، في قَولِهم، في المَدائنِ</shatr>
        </line>
        <line id="2">
          <shatr id="1">وأَلقاهُ أيضا،بَعدَ ذا،تَحتَ أَفُيلٍ</shatr>
          <shatr id="2">وفي العَرَبِ العَربا بَقايا ضَغائنِ</shatr>
        </line>
      </lines>
    </poem>
